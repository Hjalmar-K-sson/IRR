<% if (success && success.length) { %>
    <div class="flash flash--success">        
        <p class="flash__inner">
            <i class="fas fa-check-circle flash__icon"></i>
            <%= success %> 
            <input type="checkbox" id="flash-success" />
            <label class="close" title="close" for="flash-success">
                <i class="fas fa-times"></i>
            </label>
        </p>
    </div>
    <% } else if (alert && alert.length) { %>
        <div class="flash flash--alert">           
            <p class="flash__inner">
                <i class="fas fa-exclamation-triangle flash__icon"></i>
                <%= alert %>
                <input type="checkbox" id="flash-alert" />
                <label class="close" title="close" for="flash-alert">
                    <i class="fas fa-times"></i>
                </label>
            </p>
        </div>
        <% } else if (error && error.length) { %>
            <div class="flash flash--error">              
                <p class="flash__inner">
                    <i class="fas fa-skull-crossbones flash__icon"></i>
                    <%= error %>
                    <input type="checkbox" id="flash-error" />
                    <label class="close" title="close" for="flash-error">
                        <i class="fas fa-times"></i>
                    </label>
                </p>
            </div>
            <% } %> 