<% layout('layouts/boilerplate.ejs') %>
<div class="grid-wrapper">
    <div class="row">
        <img src="<%= restaurant.images[0].url %> " alt="restaurant image">
        <div class="card">
            <h3><%= restaurant.name %></h3>
            <h4><%= `${restaurant.address.street} ${restaurant.address.houseNumber}, ${restaurant.address.city}` %></h4>
            <h4><%= restaurant.cuisine %> </h4>
            <h4><%= restaurant.priceRange %></h4>
            <p><%= restaurant.description %></p>
            <p>Submitted by: <%= restaurant.author.username %></p>
        </div>
    </div>
    
</div>
