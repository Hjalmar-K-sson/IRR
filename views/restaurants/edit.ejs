<% layout('layouts/boilerplate.ejs') %>
        <section class="user__form-container">
            <div class="user__form-card">
                <h2>Edit restaurant</h2>
                <form class="user__form" action="/restaurants/<%= restaurant.id %>?_method=PUT" method="POST"
                    enctype="multipart/form-data">
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[name]" id="name" placeholder=" "
                            value="<%= restaurant.name %>" required autofocus>
                        <label class=user__form-field-label" for="name">Name</label>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[cuisine]" id="cuisine"
                            placeholder=" " value="<%= restaurant.cuisine %>" required>
                        <label class=user__form-field-label" for="cuisine">Cuisine</label>
                    </div>
                    <div class="user__form-field">
                        <label class=user__form-field-label" for="priceRange">Price Range ($ - $$$$$)</label>
                        <select class="user__form-field-input" type="text" name="restaurant[priceRange]" id="priceRange"
                            placeholder=" " value="<%= restaurant.priceRange %>" required>
                            <option value="$">$</option>
                            <option value="$$">$$</option>
                            <option value="$$$">$$$</option>
                            <option value="$$$$">$$$$</option>
                            <option value="$$$$$">$$$$$</option>
                        </select>
                    </div>
                    <div class="user__form-field">
                        <label class=user__form-field-label" for="description">Description</label>
                        <textarea class="user__form-field-textarea" type="text" name="restaurant[description]" id="description"
                            placeholder=" " required><%= restaurant.description %></textarea>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[address][city]" id="city"
                            placeholder=" " value="<%= restaurant.address.city %>" required>
                        <label class=user__form-field-label" for="city">City</label>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[address][state_region]"
                            id="state_region" placeholder=" " value="<%= restaurant.address.state_region %>">
                        <label class=user__form-field-label" for="state_region">State / Region</label>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[address][street]" id="street"
                            placeholder=" " value="<%= restaurant.address.street %>" required>
                        <label class=user__form-field-label" for="street">Street</label>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[address][houseNumber]"
                            id="houseNumber" placeholder=" " value="<%= restaurant.address.houseNumber %>" required>
                        <label class=user__form-field-label" for="houseNumber">House number</label>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[address][zipCode]" id="zipCode"
                            placeholder=" " value="<%= restaurant.address.zipCode %>" required>
                        <label class=user__form-field-label" for="zipCode">Zipcode</label>
                    </div>
                    <div class="user__form-field">
                        <input class="user__form-field-input" type="text" name="restaurant[address][country]" id="country"
                            placeholder=" " value="<%= restaurant.address.country %>" required>
                        <label class=user__form-field-label" for="country">Country</label>
                    </div>
                    <div class="user__form-field user__form-field--file">
                        <label class="user__form-field-label user__form-field-label--file" for="images">Add more images</label>
                        <input class="user__form-field-input user__form-field-input--file" type="file" name="restaurant[images]"
                            id="images" placeholder=" " multiple>
                    </div>
                    <h3>Delete images</h3>
                    <div class="grid-wrapper">
                        <div class="user__form-field user__form-field--deleteFile">
                            <% restaurant.images.forEach((img, i)=> { %>
                                <img src="<%= img.thumbnail %> " alt="Image_<%= i %> ">
                                <div class="user__form-field--deleteFile--controls">
                                    <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= img.filename %>">
                                    <label for="image-<%= i %>">Delete</label>
                                </div>
                                <% }) %>
                        </div>
                    </div>
        
                    <button id="submit" class="user__form-btn" type="submit">Update restaurant</button>
                </form>
            </div>
        </section>