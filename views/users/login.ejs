<% layout('layouts/boilerplate') %>
        <div class="logReg__form-card">
            <img src="https://images.unsplash.com/photo-1560487765-67095b892dd1?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1025&q=80"
                alt="2-color plate with plastic utensils">
            <h2>Login</h2>
            <form class="logReg__form" action="/login" method="POST">
                <div class="logReg__form-field">
                    <input class="logReg__form-field-input" type="text" name="username" id="username" placeholder=" "
                        required autofocus>
                    <label class="logReg__form-field-label" for="username">Username</label>
                </div>
                <div class="logReg__form-field">
                    <input class="logReg__form-field-input" type="password" name="password" id="password"
                        title="8-32 characters, min. 1 uppercase letter, min. 1 lowercase letter, min. 1 number, min 1 special character."
                        placeholder=" " required>
                    <label class="logReg__form-field-label" for="password">Password</label>
                </div>
                <button id="submit" class="logReg__form-btn" type="submit">Login</button>
            </form>
        </div>


